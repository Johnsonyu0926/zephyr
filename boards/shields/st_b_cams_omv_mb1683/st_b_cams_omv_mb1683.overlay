/ {
	chosen {
		zephyr,camera = &dcmi;
	};
};

&dcmi {
	status = "okay";
	sensor = <&ov5640>;

	bus-width = <8>;
	hsync-active = <0>;
	vsync-active = <0>;
	pixelclk-active = <1>;
	capture-rate = <1>;

	port {
		dcmi_ep_in: endpoint {
			compatible = "zephyr,video-interfaces";
			remote-endpoint-label = "ov5640_ep_out";
		};
	};
};
